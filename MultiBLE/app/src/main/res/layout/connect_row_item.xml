<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70sp">

    <LinearLayout
        android:id="@+id/ConnectRowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/background_scan_row_item" >
        <ImageButton
            android:id="@+id/ConnectButton"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center_vertical"
            android:contentDescription="Bluetooth connect"
            android:scaleType="fitCenter"
            android:padding="0dp"
            app:srcCompat="@drawable/ble_icon"
            android:background="@null"
            tools:ignore="HardcodedText" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/NameLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">
    
                <TextView
                    android:id="@+id/NameBody"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:text="name"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeMinTextSize="1sp"
                    android:paddingTop="0sp"
                    android:paddingBottom="0sp"
                    android:paddingStart="8sp"
                    android:paddingEnd="8sp"
                    tools:ignore="HardcodedText,NestedWeights" />

                <TextView
                    android:id="@+id/AddressBody"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:text="address"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeMinTextSize="1sp"
                    android:paddingTop="0sp"
                    android:paddingBottom="0sp"
                    android:paddingStart="8sp"
                    android:paddingEnd="8sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Data1Label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="DATA1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeMinTextSize="1sp"
                    android:paddingTop="0sp"
                    android:paddingBottom="0sp"
                    android:paddingStart="8sp"
                    android:paddingEnd="8sp"
                    tools:ignore="HardcodedText,NestedWeights" />
                <TextView
                    android:id="@+id/Data1Body"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:text="01233456789"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeMinTextSize="1sp"
                    android:paddingTop="0sp"
                    android:paddingBottom="0sp"
                    android:paddingStart="8sp"
                    android:paddingEnd="8sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Data2Label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="DATA2"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeMinTextSize="1sp"
                    android:paddingTop="0sp"
                    android:paddingBottom="0sp"
                    android:paddingStart="8sp"
                    android:paddingEnd="8sp"
                    tools:ignore="HardcodedText,NestedWeights" />
                <TextView
                    android:id="@+id/Data2Body"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:text="0123456789"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeMinTextSize="1sp"
                    android:paddingTop="0sp"
                    android:paddingBottom="0sp"
                    android:paddingStart="8sp"
                    android:paddingEnd="8sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>