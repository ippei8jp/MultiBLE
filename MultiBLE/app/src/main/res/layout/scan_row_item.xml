<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70sp">

    <LinearLayout
        android:id="@+id/RowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_scan_row_item"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/NameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/NameTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Name:"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                tools:ignore="HardcodedText,NestedWeights" />

            <TextView
                android:id="@+id/NameBody"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:text="12345678901234567890"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/AddressLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@id/NameLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AddressTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Address:"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                tools:ignore="HardcodedText,NestedWeights" />

            <TextView
                android:id="@+id/AddressBody"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:text="12345678901234567890"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/UuidLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@id/NameLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/UuidTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="UUID:"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                tools:ignore="HardcodedText,NestedWeights" />

            <TextView
                android:id="@+id/UuidBody"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:text="UUID"
                android:gravity="center_vertical"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeMinTextSize="1sp"
                android:paddingTop="0sp"
                android:paddingBottom="0sp"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>